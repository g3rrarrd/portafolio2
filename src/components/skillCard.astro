---
const { skillName, skillLevel } = Astro.props;
---

<div class="bg-gray-800 rounded-lg p-4 shadow-md max-w-xs w-full">
  <h3 class="text-white text-lg font-semibold mb-2">{skillName}</h3>
  
  <div class="w-full bg-gray-600 rounded-full h-4 overflow-hidden">
    <div 
      class="bg-blue-500 h-4 rounded-full transition-all duration-500" 
      style={`width: ${skillLevel}%`}>
    </div>
  </div>
  
  <p class="text-gray-300 text-sm mt-1 text-right">{skillLevel}%</p>
</div>

