---
const { title, period, link, description, technologies } = Astro.props;
---

<div class="border border-gray-300 rounded-xl p-4 shadow-md hover:shadow-lg transition bg-white">
  <h3 class="text-xl font-semibold">{title} <span class="text-sm text-gray-500">({period})</span></h3>
  <p class="mt-2 text-gray-700">{description}</p>
  <ul class="flex flex-wrap gap-2 mt-3 text-sm text-blue-600">
    {
      technologies.map((tec: unknown) => (
        <li class="bg-blue-100 px-2 py-1 rounded">{tec}</li>
      ))
    }
  </ul>
  <a href={link} target="_blank" rel="noopener noreferrer" class="inline-block mt-4 text-blue-500 hover:underline">
    Ver Proyecto
  </a>
</div>


